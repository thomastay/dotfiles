~/.scripts/shrinkpdf.sh [inputfile] [outputfile]

# stat
stat -c '%y' <filename>   # Last modified time of a file

# du
du -h <filename>       # size of a particular file
du -sh * | sort -hr     # size of all files in a directory
ncdu        # Ncurses based du

